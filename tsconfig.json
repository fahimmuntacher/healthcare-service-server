{
  "compilerOptions": {
    "module": "esnext",                                
    "rootDir": "./src",
    "outDir": "./dist",  
    "moduleResolution": "bundler", 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es2023",
    // "ignoreDeprecations": "6.0"  
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}

